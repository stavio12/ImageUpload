<%- include ('partials/header') -%>

    <section class="text-center">
      <div class="container mt-5">
        <h1>Upload Images Here</h1>
        <form action="/upload-single/image/" method="POST" enctype="multipart/form-data">
          <div class="col-8 mx-auto mt-5">
            <div class="form-group">
              <label for="exampleInputEmail1">Single Upload</label>
              <div class="custom-file">
                <input type="file" name="singleimage" class="custom-file-input" id="customFile" />
                <label class="custom-file-label" for="customFile">Choose Image</label>
              </div>
              <button type="submit" class="btn btn-success btn-block mt-2">Upload Image</button>
            </div>
          </form>
        <form action="/upload-multiple/images" method="POST" enctype="multipart/form-data">
            <div class="form-group">
              <label for="exampleInputEmail1">Multiple Upload</label>
              <div class="custom-file">
                <input type="file" name="mutlipleimages" class="custom-file-input" id="customFile"  multiple/>
                <label class="custom-file-label" for="customFile">Choose Image</label>
              </div>
              <button type="submit" class="btn btn-danger btn-block mt-2">Upload Multiple Images</button>
            </div>
        </form>
      </div>

      </div>
    </section>
    <%- include ('partials/footer') -%>